
{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "description": "Represents the profile of a user in the system.",
      "type": "object",
      "properties": {
        "patientName": { "type": "string", "description": "The user's full name." },
        "age": { "type": "number", "description": "The user's age." },
        "gender": { "type": "string", "enum": ["male", "female", "other"], "description": "The user's gender." },
        "dob": { "type": "string", "format": "date", "description": "The user's date of birth." },
        "contactNumber": { "type": "string", "description": "The user's contact phone number." },
        "email": { "type": "string", "format": "email", "description": "The user's email address." },
        "address": { "type": "string", "description": "The user's residential address." },
        "aadhaar": { "type": "string", "description": "The user's Aadhaar number." },
        "pan": { "type": "string", "description": "The user's PAN card number." },
        "policyHolderName": { "type": "string" },
        "relationship": { "type": "string" },
        "policyHolderContact": { "type": "string" },
        "insuranceCompany": { "type": "string" },
        "policyNumber": { "type": "string" },
        "policyType": { "type": "string", "enum": ["individual", "family_floater"] },
        "policyStartDate": { "type": "string", "format": "date" },
        "policyEndDate": { "type": "string", "format": "date" },
        "sumInsured": { "type": "number" },
        "remainingSum": { "type": "number" },
        "claimType": { "type": "string", "enum": ["cashless", "reimbursement"] },
        "tpaName": { "type": "string" },
        "tpaId": { "type": "string" },
        "accountHolderName": { "type": "string" },
        "bankName": { "type": "string" },
        "accountNumber": { "type": "string" },
        "ifscCode": { "type": "string" },
        "branchName": { "type": "string" }
      },
      "required": ["patientName", "contactNumber", "email", "address", "aadhaar"]
    },
    "UserDocument": {
      "title": "User Document",
      "description": "Represents a document uploaded by a user.",
      "type": "object",
      "properties": {
        "userId": { "type": "string", "description": "The ID of the user who uploaded the document." },
        "name": { "type": "string", "description": "The name of the document." },
        "type": { "type": "string", "description": "The type of document (e.g., aadhaar, pan)." },
        "url": { "type": "string", "format": "uri", "description": "The URL where the document is stored." },
        "uploadedAt": { "type": "string", "format": "date-time", "description": "The timestamp when the document was uploaded." }
      },
      "required": ["userId", "name", "type", "url", "uploadedAt"]
    }
  },
  "auth": {
    "providers": ["anonymous"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": { "$ref": "#/entities/UserProfile" },
      "description": "Stores the public profile data for each user."
    },
    "/users/{userId}/documents/{docId}": {
      "schema": { "$ref": "#/entities/UserDocument" },
      "description": "Stores metadata for documents uploaded by a user."
    }
  }
}

    